<UserControl x:Class="X_Hub.CustNumericUpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="33" Width="152">
    <Grid Height="25" Width="148">
        <TextBox Height="23" Name="Input" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" TextAlignment="Right" TextChanged="NumericCheck">0</TextBox>
        <Button HorizontalAlignment="Right"  Name="plus" Width="16.003" Margin="0,0,11,0" Click="plus_Click">+</Button>
        <Button HorizontalAlignment="Right"  Name="minus" Width="Auto" Click="minus_Click">-</Button>
    </Grid>
</UserControl>
